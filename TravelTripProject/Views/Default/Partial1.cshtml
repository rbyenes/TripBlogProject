@using TravelTripProject.Models.Entity
@model List<Blog>
<div class="con-bot">
    @foreach (var item in Model)
    {
    <div class="left">
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" />
        </div>
        <div class="left-text">
            <h4>@item.Title</h4>
            <span class="doller">@item.DateTime.ToString("dd.MM.yyyy")</span>
            <p>@(item.Description.Length > 85
                ? item.Description.Substring(0, 85) + "..."
                 : item.Description)</p>
            <p><a href="/Blog/BlogDetails/@item.ID"><span class="read">Read More >></span></a></p>
        </div>
    </div>
    }
    @Html.Action("Partial2","Default")
    <div class="clear"></div>
</div>

